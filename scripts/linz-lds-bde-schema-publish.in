#!/bin/sh

DB_NAME=
export PSQL=psql

if test "$1" = "--version"; then
    echo "@@VERSION@@ @@REVISION@@"
    exit 0
fi

while test -n "$1"; do
    DB_NAME=$1; shift
done

if test -z "$DB_NAME"; then
    echo "Usage: $0 { <database> | - }" >&2
    echo "       $0 --version" >&2
    exit 1
fi

export PGDATABASE=$DB_NAME

rollback()
{
    echo "ROLLBACK;"
    exit 1
}

{
cat << EOF
DO \$PUBLICATION\$
DECLARE
    rec RECORD;
    v_schema TEXT;
BEGIN

    FOR v_schema IN VALUES('lds'),('bde_ext') LOOP
        IF NOT EXISTS ( SELECT 1 FROM pg_catalog.pg_publication
                        WHERE pubname = v_schema )
        THEN
            EXECUTE format('CREATE PUBLICATION %I', v_schema);
        END IF;
        EXECUTE format('ALTER PUBLICATION %I OWNER TO bde_dba', v_schema);

        FOR rec IN select c.relname
            FROM pg_class c, pg_namespace n
            WHERE n.nspname = v_schema
            AND c.relnamespace = n.oid
            AND c.relkind = 'r'
            AND c.relname NOT IN (
                SELECT tablename
                FROM pg_catalog.pg_publication_tables
                WHERE pubname = v_schema
                  AND schemaname = v_schema
            )
        LOOP
            EXECUTE format('ALTER PUBLICATION %I ADD TABLE %I.%I',
                           v_schema, v_schema, rec.relname);
        END LOOP;
    END LOOP;

END;
\$PUBLICATION\$;

EOF
} |
grep -v "^\(BEGIN\|COMMIT\);" |
( echo "BEGIN;"; cat; echo "COMMIT;"; ) |
if test $PGDATABASE = "-"; then
    cat
else
    $PSQL -XtA --set ON_ERROR_STOP=1 -o /dev/null
fi
